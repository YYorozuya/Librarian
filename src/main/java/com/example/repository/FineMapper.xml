<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.repository.FineRepository">
    <insert id="insert" parameterType="com.example.entity.FineRecord">
        INSERT INTO fine (id, time)VALUES (#{id}, #{time})
    </insert>
    <update id="pay">
        UPDATE fine SET time = #{time} WHERE id = #{id}
    </update>
    <select id="findAll" resultType="com.example.entity.FineRecord">
        SELECT * FROM fine
    </select>
</mapper>