<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.repository.BookRepository">
    <insert id="insert" parameterType="com.example.entity.Book">
        INSERT INTO book (name,author,category,floor,shelf,area,price,num)
            VALUES (#{name},#{author},#{category},#{floor},#{shelf},#{area},#{price},#{num})
    </insert>
    <delete id="delete" parameterType="long">
        DELETE FROM book WHERE id = #{id}
    </delete>
    <update id="edit">
        UPDATE book SET name = #{name}, author = #{author}, category = #{category}, price = #{price}, floor = #{floor}, shelf = #{shelf}, area = #{area}, num = #{num}
            WHERE id = #{id}
    </update>
    <select id="findAll" resultType="com.example.entity.Book">
        SELECT * FROM book
    </select>
    <select id="findById" parameterType="long" resultType="com.example.entity.Book">
        SELECT * FROM book WHERE id = #{id}
    </select>
</mapper>